sudo ufw status

sudo ufw enable

sudo ufw allow 'Nginx Full'
sudo ufw delete allow 'Nginx HTTP'

sudo ufw status

sudo certbot --nginx -d server2.trainingsite.online -d www.server2.trainingsite.online

